<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewresultat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        
        android:layout_marginStart="75dp"

        android:text="TextView"

        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separator3" />

    <TextView
        android:id="@+id/textViewcalendrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:layout_marginStart="50dp"
        android:text="TextView"


        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@id/textViewresultat3"
        app:layout_constraintBottom_toTopOf="@id/separator3"/>

    <TextView
        android:id="@+id/textViewclassement3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@id/textViewcalendrier3"
        app:layout_constraintBottom_toTopOf="@id/separator3"
        android:text="TextView"
        android:textColor="#FF0000"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/banieredirectsport" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewfooot4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView11"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipe"
        android:layout_marginTop="12dp"
        android:layout_marginStart="75dp"
        app:layout_constraintTop_toBottomOf="@+id/separator3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewfooot4"

        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Buts"
        android:layout_marginTop="12dp"
        android:layout_marginStart="100dp"

        app:layout_constraintBottom_toTopOf="@id/recyclerViewfooot4"
        app:layout_constraintStart_toEndOf="@id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/separator3"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Points"
        android:layout_marginTop="12dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewfooot4"
        app:layout_constraintStart_toEndOf="@id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/separator3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"

        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/textViewcalendrier3"
        android:id="@+id/separator3"/>
</androidx.constraintlayout.widget.ConstraintLayout>