<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewResultat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:layout_marginStart="75dp"

        android:text="TextView"

        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separator"

         />

    <TextView
        android:id="@+id/textViewcalendrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="50dp"
        android:text="TextView"

        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@id/textViewResultat2"
        app:layout_constraintBottom_toTopOf="@id/separator"/>



    <TextView
        android:id="@+id/textViewclassement2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@id/textViewcalendrier2"
        app:layout_constraintBottom_toTopOf="@id/separator"
        android:text="TextView"/>





    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/banieredirectsport" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewfooot3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator"
         />

    <View

        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/textViewcalendrier2"
        android:id="@+id/separator"/>


</androidx.constraintlayout.widget.ConstraintLayout>